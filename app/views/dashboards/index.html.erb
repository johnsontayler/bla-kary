<div class="container">
  <h2 style="color: white; text-align: center;">Dashboard</h1>

  <div class="row">

    <div class="col-4">
    <! --- Profile bar ---->
      <div class="card-prof-bar p-3 mt-3 mb-3" style="border: 4px solid black;">

        <! --- Header ---->
        <div class="cards-prof-bar">
          <%= image_tag (current_user.photo), class: "avatar-dashboard" %>
          <div class="card-profile">
            <p class="mb-1"><strong><%= current_user.first_name %> <%= current_user.last_name %></strong></p>
          </div>
        </div>

        <! --- Order cards ---->
        <div class="cards-prof-bar">
          <div class="card-prof-bar">
            <i class="far fa-file-alt" style="color: red;"></i>
            <br>
            <h3>5 Contract Bids</h3>
          </div>
        </div>

        <! --- Add a Ride  ---->
        <form>
          <h3>ADD A RIDE</h3>
          <div class="form-group row">
            <div class="col-12">
              <input class="form-control" type="text" placeholder="Pick Up Address" id="inputAddress">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-12">
              <input class="form-control" type="text" placeholder="Drop Off Address" id="inputAddress">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-12">
              <select class="custom-select" required>
                <option value="">Date</option>
                <option value="1"><% Date.today.beginning_of_week %></option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-12">
              <input class="form-control" type="time" value="13:45:00" id="example-time-input">
            </div>
          </div>
            <button type="submit" class="col-12 btn btn-danger">SUBMIT</button>
        </form>
      </div>
    </div>

    <div class="col-8">
    <! --- Weekly Schedule ---->
      <div class="card-dash p-3 mt-3 mb-3">

        <div class="card p-2">

          <h3 class="navbar-brand" style="font-size: 32px;">WEEKLY SCHEDULE</h3>

          <div>
            <% if @weekly_schedule.nil? %>
              <% @weekly_schedule.rides.each do |ride| %>
                <div class="card">
                  <div class="card-body d-flex justify-content-around align-items-center" style="padding: 0.50rem;">
                    <p>TIME: <%= ride.time %></p>
                    <p>PICK UP: <%= ride.pick_up %></p>
                    <p>DROP OFF: <%= ride.drop_off %></p>
                    <%= link_to ride_path(ride), style: "color: red;", method: :patch do %>
                      <i class="fas fa-times"></i>
                    <% end %>
                  </div>
                </div> 
