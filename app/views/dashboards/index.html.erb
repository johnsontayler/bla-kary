<div class="container">
  <h2 style="color: white; text-align: center;">Dashboard</h1>

  <div class="row">

    <div class="col-4">
    <! --- Profile bar ---->
      <div class="card-prof-bar p-3 mt-3 mb-3" style="border: 4px solid black;">

        <! --- Header ---->
        <div class="cards-prof-bar">
          <%= image_tag (current_user.photo), class: "avatar-dashboard" %>
          <div class="card-profile">
            <p class="mb-1"><strong><%= current_user.first_name %> <%= current_user.last_name %></strong></p>
          </div>
        </div>

        <! --- Order cards ---->
        <div class="cards-prof-bar">
          <div class="card-prof-bar">
            <i class="far fa-file-alt" style="color: red;"></i>
            <br>
            <h3>5 Contract Bids</h3>
          </div>
        </div>

        <! --- Add a Ride  ---->
        <h3>ADD A RIDE</h3>
        <%= render 'rides/create', ride: @ride %>
      </div>
    </div>

    <div class="col-8">
    <! --- Weekly Schedule ---->
      <% today = Date.today %>
      <% current_week = [*today.at_beginning_of_week..today.at_end_of_week] %>
      <% @days_from_current_week = current_week.map {|date| date.strftime("%A, %m/%d/%Y")} %>

      <div class="card-dash p-3 mt-3 mb-3">

        <div class="card p-2">
          <div class="d-flex justify-content-between">
          <h3 style="font-size: 32px;">WEEKLY SCHEDULE</h3>
          <% @price = 0 %>
          <% @weekly_schedule.each { |ride| @price += ride.price }  %>
          <div class="d-flex justify-content-between align-items-center">
            <p>Total Price: $<%= @price %></p>
            <%= button_to "Submit", "/home", class: "btn-sm btn-danger ml-2" %>
          </div>
          </div>
          <br>

          <div>
            <% if @weekly_schedule %>
              <% @days_from_current_week.each do |date| %>
                <p><%= date %></p>
                <% @weekly_schedule.each do |ride| %>
                  <% if ride.date == date %>
                    <div class="card">
                      <div class="card-body d-flex justify-content-around align-items-center" style="padding: 0.50rem;">
                        <p><%= ride.time.strftime("%I:%M%p") %></p>
                        <p>PICK UP: <%= ride.pick_up[0..17] %></p>
                        <p>DROP OFF: <%= ride.drop_off[0..17] %></p>
                        <p>PRICE: $<%= ride.price %></p>
                        <%= link_to ride_path(ride), style: "color: red;", method: :patch do %>
                          <i class="fas fa-times"></i>
                        <% end %>
                      </div>
                    </div> 
                  <% end %>
                <% end %>
                <br>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
