<% if current_user.schedule_submitted %>
  <%= button_to "Edit", current_user, method: :patch, class: "btn-sm btn-light ml-2", style: "background-color: #8f0d0d; color: white; border: 1px solid #8f0d0d;" %>
<% else %>
  <%= button_to "Submit", current_user, method: :patch, class: "btn-sm btn-light ml-2", style: "color: red; border: 1px solid red;" %>
<% end %>
