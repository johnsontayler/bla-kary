<% today = Date.today %>
<% current_week = [*today.at_beginning_of_week..today.at_end_of_week] %>
<% @days_from_current_week = current_week.map {|date| date.strftime("%A, %m/%d/%Y")} %>

<%= simple_form_for(ride) do |f| %>
  <%= f.input :date, collection: @days_from_current_week, include_blank: false, label:false %>

  <%= f.input :time, html5: true, label:false %>

  <%= f.input :pick_up, placeholder: 'Pick Up Address', label:false %>

  <%= f.input :drop_off, placeholder: 'Drop Off Address', label:false %>

  <%= f.input :price, placeholder: 'Price', label:false %>

  <%= f.submit "Add", class: "col-12 btn btn-danger"%>
<% end %>